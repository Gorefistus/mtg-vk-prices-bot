{
  "extends": "airbnb-base",
  "env": {
    "browser": true,
    "node": true,
    "jest": true,
    "es6": true
  },
  "rules": {
    "linebreak-style": [
      0,
      "unix"
    ],
    "no-underscore-dangle": [
      0
    ],
    "no-extra-bind": [
      2
    ],
    "import/first": [
      0
    ],
    "prefer-destructuring": [
      0
    ],
    "indent": [
      "error",
      4
    ],
    "operator-assignment": [
      0
    ],
    "no-plusplus": [
      0
    ],
    "no-console": [
      0
    ],
    "max-len": [
      1,
      200
    ],
    "no-await-in-loop": [
      0
    ]
  }
}

